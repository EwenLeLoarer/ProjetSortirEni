{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="form_container" id="new_ville">
        <h2>Cr√©er une ville</h2>
        <div class="new_location_content">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <label class="ville_label">
                Nom
                {{ form_widget(form.nom, {'attr': {'class': 'ville_input'}}) }}
            </label>
            <label class="ville_label">
                Code postal
                {{ form_widget(form.codePostal, {'attr': {'class': 'ville_input'}}) }}
            </label>
            <div class="buttons ville_buttons">
                {{ form_row(form.enregistrer) }}
            </div>
            <div class="buttons ville_buttons">
                <a href="{{ path('app_sortie') }}" class="button button_primary">Annuler</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
