{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper border border-3">
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.rue) }}
    <div style="display: flex; align-items: center;">
        {{ form_row(form.ville) }}
        <a href="{{ path('app_create_ville', { backToLieu: true }) }}" class="btn btn-secondary" style="margin-left: 10px;">
            + creer une nouvelle ville
        </a>
    </div>
    {{ form_row(form.enregistrer) }}
    {{ form_end(form) }}
</div>
{% endblock %}
